@model AddOrEditLectureVM

@{
    ViewData["Title"] = "تعديل البيانات";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">
                    <h2 class="mb-4 text-center text-primary fw-bold display-6">@ViewData["Title"]</h2>
                    <form method="post" asp-action="SaveEdit" asp-controller="Lecture">
                        <input type="hidden" asp-for="LctID"/>
                        <input type="hidden" asp-for="CourseID" />
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Title" class="form-label fw-semibold">عنوان المحاضرة</label>
                                <input asp-for="Title" class="form-control shadow-sm" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="LectureTime" class="form-label fw-semibold">وقت المحاضرة</label>
                                <input asp-for="LectureTime" class="form-control shadow-sm" />
                                <span asp-validation-for="LectureTime" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold">الوصف</label>
                                <input asp-for="Description" class="form-control shadow-sm" />
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between mt-4 gap-3">
                                <input type="submit" value="حفظ" class="btn btn-success px-4 py-2 shadow-sm w-100 w-md-auto"/>
                                <a href="@Url.Action("GetLectures", "Lecture", new{id = Model.CourseID})" class="btn btn-outline-secondary px-4 py-2 shadow-sm w-100 w-md-auto">رجوع</a>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
