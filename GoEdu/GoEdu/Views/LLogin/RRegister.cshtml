@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>التسجيل</title>
    <!-- ربط Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #0d1b2a, #1e2f5b, #2c7aff); /* تدرج لوني */
            font-family: 'Tajawal', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-container {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            border-radius: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            padding: 50px;
            width: 100%;
            max-width: 450px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .form-title {
            font-size: 2.2rem;
            font-weight: bold;
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-text {
            color: #ffffff;
            text-align: center;
            margin-bottom: 40px;
            font-size: 1.1rem;
        }

        .form-control {
            border-radius: 10px;
            padding-left: 40px;
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.5);
            height: 50px;
            font-size: 1rem;
            transition: all 0.3s;
            margin-bottom: 20px; /* زيادة المسافة بين الحقول */
        }

            .form-control:focus {
                border-color: #f97316;
                box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
                outline: none;
            }

        .form-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: white;
        }

        .btn-primary {
            background-color: #f97316;
            border: none;
            border-radius: 30px;
            padding: 15px;
            width: 100%;
            font-size: 1.2rem;
            font-weight: bold;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #ff9f45;
            }

        .footer-link {
            color: #ffffff;
            text-decoration: none;
        }

            .footer-link:hover {
                text-decoration: underline;
            }

        .btn-primary:active {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .radio-label {
            color: #ffffff;
            font-size: 1rem;
            margin-right: 10px;
        }

        .radio-group {
            display: flex;
            gap: 30px; /* زيادة المسافة بين الاختيارات */
            margin-bottom: 20px;
            justify-content: space-between; /* توزيع العناصر بالتساوي */
        }

            .radio-group .form-check {
                display: flex;
                flex-direction: row-reverse; /* عكس ترتيب الـ radio و label */
                align-items: center;
            }

                .radio-group .form-check input {
                    margin-left: 10px; /* مسافة بين الراديو بوتون و الـ Label */
                }
    </style>
</head>
<body>

    <div class="register-container">
        <div class="form-title">أنشئ حسابك</div>
        <div class="form-text">من فضلك أكمل بياناتك لتسجيل حساب جديد</div>

        <form asp-action="Register" method="post">
            <!-- الاسم الكامل -->
            <div class="mb-4 position-relative">
                <input type="text" name="FullName" class="form-control" placeholder="الاسم الكامل" required />
                <i class="fa fa-user form-icon"></i>
            </div>

            <!-- البريد الإلكتروني -->
            <div class="mb-4 position-relative">
                <input type="email" name="Email" class="form-control" placeholder="البريد الإلكتروني" required />
                <i class="fa fa-envelope form-icon"></i>
            </div>

            <!-- رقم التليفون -->
            <div class="mb-4 position-relative">
                <input type="tel" name="PhoneNumber" class="form-control" placeholder="رقم التليفون" required />
                <i class="fa fa-phone form-icon"></i>
            </div>

            <!-- كلمة المرور -->
            <div class="mb-4 position-relative">
                <input type="password" name="Password" class="form-control" placeholder="••••••••" required />
                <i class="fa fa-lock form-icon"></i>
            </div>

            <!-- تأكيد كلمة المرور -->
            <div class="mb-4 position-relative">
                <input type="password" name="ConfirmPassword" class="form-control" placeholder="تأكيد كلمة المرور" required />
                <i class="fa fa-lock form-icon"></i>
            </div>

            <!-- نوع المستخدم (طالب أو مدرس) -->
            <div class="radio-group">
                <div class="form-check form-check-inline">
                    <label class="radio-label" for="student">طالب</label>
                    <input type="radio" name="UserType" value="Student" class="form-check-input" id="student" required />
                </div>
                <div class="form-check form-check-inline">
                    <label class="radio-label" for="teacher">مدرس</label>
                    <input type="radio" name="UserType" value="Teacher" class="form-check-input" id="teacher" required />
                </div>
            </div>

            <!-- زر التسجيل -->
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-user-plus"></i> تسجيل
            </button>

            <!-- رابط تسجيل الدخول -->
            <div class="text-center mt-4">
                <p class="text-white">
                    لديك حساب بالفعل؟
                    <a href="@Url.Action("Login", "Login")" class="footer-link">تسجيل الدخول</a>
                </p>
            </div>
        </form>
    </div>

    <!-- ربط JavaScript و Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
