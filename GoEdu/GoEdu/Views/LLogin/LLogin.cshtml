@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تسجيل الدخول</title>
    <!-- ربط Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        /* الخلفية بتدرج لوني أوسع من الكحلي */
        body {
            background: linear-gradient(135deg, #0d1b2a, #1e2f5b, #2c7aff); /* تدرج لوني أوسع */
            font-family: 'Tajawal', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* تصميم النموذج */
        .login-container {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            border-radius: 30px; /* تقويس الزوايا */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            padding: 50px;
            width: 100%;
            max-width: 450px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        /* العنوان الرئيسي */
        .form-title {
            font-size: 2.2rem;
            font-weight: bold;
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

        /* النص التوضيحي */
        .form-text {
            color: #ffffff;
            text-align: center;
            margin-bottom: 40px;
            font-size: 1.1rem;
        }

        /* التصميم للأيقونات داخل المدخل */
        .form-control {
            border-radius: 10px; /* جعل الحواف بسيطة */
            padding-left: 40px;
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.5);
            height: 50px; /* تكبير الحقول */
            font-size: 1rem; /* تكبير حجم الخط */
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #f97316;
                box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
                outline: none;
            }

        .form-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: white;
        }

        /* الزر */
        .btn-primary {
            background-color: #f97316;
            border: none;
            border-radius: 30px;
            padding: 15px;
            width: 100%;
            font-size: 1.2rem;
            font-weight: bold;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #ff9f45;
            }

        .footer-link {
            color: #ffffff;
            text-decoration: none;
        }

            .footer-link:hover {
                text-decoration: underline;
            }

        /* إضافة تأثيرات للزر في الحواف */
        .btn-primary:active {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="form-title">أهلاً بك!</div>
        <div class="form-text">من فضلك سجل الدخول للمتابعة</div>

        <form asp-action="Login" method="post">
            <!-- البريد الإلكتروني -->
            <div class="mb-4 position-relative">
                <input type="email" name="Email" class="form-control" placeholder="البريد الإلكتروني" required />
                <i class="fa fa-envelope form-icon"></i>
            </div>

            <!-- كلمة المرور -->
            <div class="mb-4 position-relative">
                <input type="password" name="Password" class="form-control" placeholder="••••••••" required />
                <i class="fa fa-lock form-icon"></i>
            </div>

            <!-- زر تسجيل الدخول -->
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in-alt"></i> دخول
            </button>

            <!-- رابط التسجيل -->
            <div class="text-center mt-4">
                <p class="text-white">
                    لا تملك حساب؟
                    <a href="@Url.Action("Register", "Login")" class="footer-link">أنشئ واحداً الآن</a>
                </p>
            </div>
        </form>
    </div>

    <!-- ربط JavaScript و Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
